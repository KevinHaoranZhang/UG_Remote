{
  "name": "PyMotron",
  "version": "6.0.0-beta.0",
  "description": "Connect to uoft engineering labs in 5 seconds.",
  "main": "src/main.js",
  "scripts": {
    "debug_start": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make_x64": "electron-forge make --arch=x64",
    "make_arm64": "electron-forge make --arch=arm64",
    "make": "npm run make_x64 && npm run make_arm64"
  },
  "repository": "https://github.com/junhaoliao/UG_Remote",
  "keywords": [
    "Electron"
  ],
  "author": "Junhao Liao",
  "license": "",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^12.0.5"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0",
    "update-electron-app": "^2.0.1",
    "xterm": "^4.12.0-beta.26",
    "xterm-addon-fit": "^0.6.0-beta.2",
    "zeromq": "^6.0.0-beta.6"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "osxSign": {
          "identity": "Developer ID Application: Junhao Liao (4NCV93W849)"
        },
        "icon": "resources/icon_white_bg",
        "ignore": [
          ".idea",
          ".gitignore",
          "^(.*/requirements.txt$)",
          "^(.*/__pycache__$)",
          "^(.*/README.md$)",
          "profile/keys",
          "profile/user_profile.json"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "PyMotron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
